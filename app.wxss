@import "/wxParse/wxParse.wxss";

/** app.wxss **/

/********************************* common **************************/

page {
	font-family: "微软雅黑";
	overflow: scroll;
}

page::-webkit-scrollbar {
	height: 0px;
	width: 0px;
	color: transparent;
}

navigator:hover, .navigator-hover {
	background: none;
}

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 20 rpx 0;
	box-sizing: border-box;
}

.pageWrapper {
	width: 100%;
	height: 100%;
	font-size: 14px;
}

.floatR {
	float: right;
}

.textAlignR {
	text-align: right;
}

.pd10 {
	padding: 10px;
}

.pd15 {
	padding: 15px;
}

.mt5 {
	margin-top: 5px;
}

/* 删除线 */

.line-delete {
	text-decoration: line-through;
	font-size: 12px;
	color: #999;
}

.borTop {
	border-top: 1px solid #f5f5f5;
}

.bgeee {
	width: 100%;
	height: 100%;
	background-color: #eee;
}

.color999 {
	color: #999;
}

.purple {
	color: purple;
}

.bgWhite {
	background: #fff;
}

.big-Red {
	font-size: 16px;
	color: red;
}

button.save-edit {
	width: 90%;
	margin: 0 auto;
	font-size: 16px;
	color: #fff;
	background: #1aad19;
	margin-top: 20px;
}

.red {
	color: red;
}

button.bg-red {
	background: red;
}

/********************************* tab bottom **************************/

.tab-Wrapper {
	width: 100%;
	padding: 5px 0px 0px 0px;
	position: fixed;
	bottom: 0px;
	text-align: center;
	border-top: 1px solid #eee;
	background: #fff;
	font-size: 14px;
}

.tab-Wrapper .tab-item {
	float: left;
	width: 50%;
	text-align: center;
}

.tab-item image {
	width: 25px;
	height: 25px;
}

.tab-item text {
	display: block;
}

/* order-info common */

.order-info {
	background: #fff;
	height: 80px;
}

.order-info view {
	float: left;
}

.order-info image {
	width: 150px;
}

.order-info view:nth-child(1) {
	width: 23%;
}

.order-info view:nth-child(2) {
	width: 70%;
	padding: 15px 10px;
}

.order-info view text {
	line-height: 25px;
}

.order-info view text:first-child {
	display: block;
}

.order-info view text:last-child {
	color: #999;
	font-weight: bold;
}

