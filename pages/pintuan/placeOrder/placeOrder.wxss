/* pages/pintuan/placeOrder/placeOrder.wxss */

page {
  font: 14px/20px 微软雅黑;
  background: #f5f5f5;
}

.order-info image{
  width: 80px;
  height: 80px;
  display: block;
}

/* bottom */
.fixedBottom{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0px;
  line-height: 50px;
}

.fixedBottom view{
  float: left;
  text-align: center;
}
.fixedBottom view:first-child{
  width: 60%;
  background: #fff;
}
.fixedBottom view:last-child{
  width: 40%;
  background: red;
  color: #fff;
}

