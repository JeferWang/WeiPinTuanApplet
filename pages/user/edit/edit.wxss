/* pages/user/edit.wxss */

page {
  background: #f5f5f5;
}

page::-webkit-scrollbar {
  width: 0px;
  height: 0px;
  color: transparent;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/************************** edit mian ********************/

.edit-main {
  font-size: 14px;
}

.edit-main label view {
  padding: 10px;
}

.edit-main label view:first-child {
  background: #f5f5f5;
  font-weight: bold;
}

.edit-main label view:nth-child(2) {
  background: #fff;
}

.edit-main label view > text {
  float: right;
  color: #999;
  font-size: 12px;
}

