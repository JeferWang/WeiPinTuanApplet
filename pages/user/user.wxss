/* pages/user/user.wxml.wxss */

page {
  background: #eee;
}

page::-webkit-scrollbar {
  width: 0px;
  height: 0px;
  color: transparent;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.editLink {
  width: 100%;
  margin-right: 30px;
  text-align: right;
  font-size: 14px;
}

.editLink image {
  width: 20px;
  height: 20px;
  vertical-align: -15%;
  margin-right: 2px;
}

.user-main {
  width: 90%;
  margin: 20px auto;
}

.user-main .pull-Down {
  width: 100%;
}

.user-main .menu-one, .user-main .menu-two {
  width: 100%;
  background: #fff;
  padding: 15px 0px;
  box-shadow: 0px 0px 2px #e0e0e0;
  border-radius: 2px;
  font-size: 14px;
}

.user-main .menu-one {
  margin-top: 10px;
  font-weight: bold;
}

.user-main .menu-one text:first-child {
  padding-left: 15px;
}

.user-main .menu-two {
  margin-top: 1px;
}

.user-main .menu-two text:first-child {
  padding-left: 20px;
}

.right-tip {
  float: right;
  font-size: 14px;
  margin-right: 15px;
  font-weight: normal;
}

.create-user {
  width: 100%;
  margin-bottom: 100px;
  font-size: 12px;
  text-align: center;
  color: #999;
}

